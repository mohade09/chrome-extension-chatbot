{
  "manifest_version": 3,
  "name": "Simple Chat Extension",
  "version": "1.0",
  "description": "A simple chat extension for Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "wss://*/",
    "https://*/"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
